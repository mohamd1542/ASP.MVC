@model IEnumerable<Group>
<br />
@using (Html.BeginForm("Search", "Groups", FormMethod.Get))
{
    <input type="text" name="searchTerm" style="height:35px;width:200px" placeholder="Search ....." />
    <button type="submit">Search</button>
}
<br />
<br />
@if (Model != null)
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Group Name</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>